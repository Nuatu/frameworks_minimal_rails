<% content_for(:title, "Taggings") %>
<div class="container">
  <div class="row">

    <div class="col-sm-3">
      <%= render('nav') %>
    </div>

    <div class="col-sm-3">
      <h1>New</h1>
      <%= flash[:notice] %>

      <form action='/taggings/<%= @tagging.id %>' method='post'>
      <%= render('form') %>
      <button>Create</button>
      </form>
    </div>


    <div class="col-sm-3">
      <h1>Tags</h1>
      <ul>
        <%=@taggings.each do |tagging| %>
          <li><a href="/taggings/<%= tagging.id %>"><%= tagging.name %></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
