<% content_for(:title, "Tags") %>
<div class="container">
  <div class="row">

    <div class="col-sm-3">
      <h1>New</h1>
      <%= flash[:notice] %>

      <form action='/tags/<%= @tag.id %>' method='post'>
      <%= render('form') %>
      <button>Submit</button>
      </form>
    </div>


    <div class="col-sm-3">
      <h1>Tags</h1>
      <ul>
        <% @tags.each do |tag| %>
          <li><a href="/tags/<%= tag.id %>"><%= tag.name %></a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
